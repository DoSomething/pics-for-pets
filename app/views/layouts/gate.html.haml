!!! 5
%html
  %head
    %title Pics for Pets
    = render :partial => 'partials/analytics'
    = stylesheet_link_tag 'gate', :media => 'all'
    = javascript_include_tag 'application'
    = javascript_include_tag 'gate'
    %meta{ 'http-equiv' => 'X-UA-Compatible', :content => 'IE=edge,chrome=1' }
    %meta{ :name => 'viewport', :content => "width=device-width, initial-scale=1, maximum-scale=1" }
    %meta{ :property => 'og:title', :content => 'Pics for Pets' }
    %meta{ :property => 'og:description', :content => 'Over half of the 5 to 7 million pets that enter shelters are put to sleep.  Help save their lives just by hitting "share"' }
    %meta{ :property => 'og:image', :content => 'http://pics.dosomething.org/images/logo-pics.png' }
    = csrf_meta_tags
  %body.wrapper
    - if Rails.env.development?
      = render :partial => 'partials/debug'
      = link_to 'debug', '#', { :id => 'debug' } 

    = yield