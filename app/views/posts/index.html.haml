- cache @admin + 'posts-index-home' do
  %script{:type => "text/javascript"}
    var count = #{@count};
    var latest = #{@last};
  
  %section.posts
    .section-container
      %h2 Share shelter pets with friends.
      %p For every 400 shares, we'll donate needed pet supplies to the animal's shelter.
      .post-list
        - if @posts.length > 0
          =raw render('post').gsub(/\n/, '')
          .inview
        - else
          =render 'not_found'
